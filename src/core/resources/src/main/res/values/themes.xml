<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.USStock" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor" >@color/status_bar_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:textColor">?attr/colorFontMain</item>

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/brand_red</item>
        <item name="colorSecondaryVariant">@color/brand_red</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorFontMain">@color/gray_95</item>
        <item name="colorFontSecond">@color/gray_60</item>
        <item name="colorBackground">@color/gray_10</item>

        <!-- region toolbar -->
        <item name="toolbarBackground">@color/white</item>
        <item name="toolbarMenuIconColor">?attr/colorFontMain</item>
        <item name="toolbarTextColor">?attr/colorFontMain</item>
        <item name="toolbarEditTextHintColor">@color/gray_40</item>
        <item name="toolbarEditTextColor">?attr/colorFontMain</item>
        <item name="toolbarSearchIconColor">?attr/toolbarEditTextHintColor</item>
        <!-- endregion toolbar -->
    </style>

    <style name="Theme.USStock.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>